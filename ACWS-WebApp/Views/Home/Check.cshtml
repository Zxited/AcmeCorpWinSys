@{
    ViewData["Title"] = "Check Entries";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <form method="post">
            <p class="h4">Check your entries.</p>
            <hr />

            <div class="text-danger"></div>

            <div class="form-group">
                <label for="serial_number">Serial Number</label>
                <input id="serial_number" maxlength="8" autocomplete="on" type="text" placeholder="A1B2C3D4" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input id="email" autocomplete="email" type="email" placeholder="example@example.example" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>