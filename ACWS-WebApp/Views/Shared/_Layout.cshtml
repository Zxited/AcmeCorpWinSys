<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acme Corporation</title>
    <link rel="shortcut icon" href="/favicon.png" type="image/png">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-dark-custom bg-star text-outline">
    <header>
        <nav class="navbar mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Acme</a>
                <!--<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>-->
                <!--<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">-->
                <div>
                    <!--<partial name="_LoginPartial" />-->
                    <ul class="navbar-nav flex-grow-1 flex-row">
                        <li class="nav-item mr-3">
                            <a class="nav-link text-light-custom" asp-area="" asp-controller="Home" asp-action="Check">Check my entries</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Redeem">Redeem Code</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer pb-2">
        <div class="container">
            &copy; 2020 - Acme Corporation - <a asp-area="" asp-controller="Home" asp-action="Tos">Terms</a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
